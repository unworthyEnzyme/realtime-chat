// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

model User {
  id               Int       @id @default(autoincrement())
  username         String    @unique
  email            String    @unique
  password         String
  createdAt        DateTime  @default(now())
  sessions         Session[]
  sentMessages     Message[] @relation("sender")
  receivedMessages Message[] @relation("receiver")
}

model Session {
  id             String   @id
  client         User     @relation(fields: [clientUsername], references: [username])
  clientUsername String
  createdAt      DateTime @default(now())
  expiresAt      DateTime
}

model Message {
  id           Int      @id @default(autoincrement())
  from         String
  to           String
  content      String
  fromRelation User     @relation("sender", fields: [from], references: [username])
  toRelation   User     @relation("receiver", fields: [to], references: [username])
  createdAt    DateTime @default(now())
  editetAt     DateTime @updatedAt
}
